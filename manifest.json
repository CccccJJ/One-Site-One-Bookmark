{
  "name": "One Site One Bookmark",
  "description": "阅读不丢位，一书一签智能跟。",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["bookmarks", "storage", "activeTab"],
   "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "64": "images/icon_64.png",
    "128": "images/icon_128.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "script/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "page/hello.html"
  }
}
